<div class="page-header">
  <%= link_to projects_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_project_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>

<%= link_to  new_project_video_path(@project), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    New Video
  <% end %>


  <h1>Show project</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @project.name %></dd>

  <dt>Description:</dt>
  <dd><%= @project.description %></dd>

  <dt>Begin:</dt>
  <dd><%= @project.begin %></dd>

  <dt>End:</dt>
  <dd><%= @project.end %></dd>

  <dt>Place:</dt>
  <dd><%= @project.place %></dd>

</dl>

<!-- ######################## -->
<div class="page-header">  
  <h1>Listing videos from project <%= @project %></h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Meters</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @videos) do |video| %>
            <td><%= video.name %></td>
            <td><%= video.description %></td>
            <td><%= video.meters %></td>
            <td><%= link_to 'Show', project_video_path(@project, video) %></td>
      <% end %>
    </tbody>
  </table>
</div>
